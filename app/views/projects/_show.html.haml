%article.project
  .spacer(id="#{project.slug}")
  .flip-container(ontouchstart="this.classList.toggle('hover');")
    .flipper
      .front
        .top-half
          - if project.link.length > 0
            %h2
              = link_to project.title, project.link, target: "_blank"
          - else
            %h2= project.title

        .circle
          = image_tag project.icon.url(:thumb)

      .back
        .description
          :markdown
            #{project.description}

  - if user_signed_in?
    %section.edit-links
      = link_to image_tag("icons/edit.png"), edit_project_path(project)
      = link_to image_tag("icons/delete.png"), project_path(project), method: :delete,
        data: { confirm: "Are you sure you want to delete project #{project.title}?" }
