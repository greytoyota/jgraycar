- if project.link.length > 0
  %h2
    = link_to project.title, project.link
- else
  %h2= project.title

%small= project.date

:markdown
  #{project.description}

%section.edit-links
  = link_to "Edit", edit_project_path(project)
  = link_to "Delete", project_path(project), method: :delete,
    data: { confirm: "Are you sure you want to delete project #{project.title}?" }
